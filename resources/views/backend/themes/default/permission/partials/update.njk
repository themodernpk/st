<div class="modal fade" id="update" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">

        <!--form-->
        <form id="formCreate" action="{{ "bPupate" | route() }}" v-on:submit.prevent="updateItem()" method="post" class="form-horizontal">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Update Record</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="name" class="form-control" v-model="item.name" name="name" placeholder="Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Enable</label>
                        <div class="col-sm-10">
                            <label class="radio-inline">
                                <input type="radio" name="enable" v-model="item.enable" value="1" checked> Yes
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="enable"  v-model="item.enable"  value="0"> No
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                </div>

            </div>
            <input type="hidden" v-model="item.id" />
        </form>
        <!--/form-->

    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->